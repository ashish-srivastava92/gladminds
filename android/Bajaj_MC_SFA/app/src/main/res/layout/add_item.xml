<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sfa.mc.bajaj.gladminds.com.bajaj_mc_sfa.MenuView_Activity"
    android:background="#ffffff">

    <RelativeLayout
        android:id="@+id/rlTopBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:background="#247BE4">

        <TextView
            android:id="@+id/tv_tittle_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="15dp"
            android:textSize="25sp"
            android:textColor="#ffffff"
            android:text="ADD PARTS"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="normal"/>


        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_arrow_back_white_24dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_second"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/rlTopBar"
        android:background="#D3D3D3"
        android:padding="5dp"

        >


        <EditText
            android:id="@+id/edit_search"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:ems="15"
            android:maxLines="3"
            android:background="#ffffff"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/btn_enter"
            android:hint="Models/Part Number/Part Name"
            android:drawableLeft="@drawable/ic_search_grey600_24dp"/>



        <Button
            android:id="@+id/btn_enter"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="Go"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginBottom="10dp"
            android:textColor="#ffffff"
            android:background="#247BE4"/>


    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/rl_third"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/rl_second"
        android:background="#656565"
        >


        <TextView
            android:id="@+id/tv_third_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textSize="25sp"
            android:textColor="#ffffff"
            android:text="Models"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="normal"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_third"
        android:orientation="horizontal"
        >
        <fragment
            android:layout_height="match_parent"
            android:layout_width="250px"
            class="sfa.mc.bajaj.gladminds.com.bajaj_mc_sfa.MenuFragment"
            android:id="@+id/fragment"/>
        <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            class="sfa.mc.bajaj.gladminds.com.bajaj_mc_sfa.TextFragment"
            android:id="@+id/fragment2"/>
    </LinearLayout>

</RelativeLayout>